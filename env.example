# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/housing_econometrics
ASYNC_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/housing_econometrics

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Housing Market Econometrics API
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Development Settings
DEBUG=true
ENVIRONMENT=development

# External API Keys (if needed)
FRED_API_KEY=your-fred-api-key-here
ZILLOW_API_KEY=your-zillow-api-key-here

# File Paths
DATA_DIR=./data
MODELS_DIR=./models
RESULTS_DIR=./results 